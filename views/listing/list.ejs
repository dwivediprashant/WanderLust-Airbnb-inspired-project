<% layout ("/layouts/boilerplate.ejs")%>

<body>
  <div class="fil-contain">
    <div class="fil-contain">
      <div class="filters">
        <a class="filter" id="All" href="/list">
          <i class="fa-solid fa-globe fa-spin" style="color: #74c0fc"></i>
          <p>All</p>
        </a>
        <a class="filter" id="Trending" href="/list">
          <i
            class="fa-solid fa-fire-flame-curved fa-bounce"
            style="color: #ff3d3d"
          ></i>
          <p>Trending</p>
        </a>
        <a class="filter" id="Room" href="/list/category/room">
          <i class="fa-solid fa-bed" style="color: #b197fc"></i>
          <p>Rooms</p>
        </a>
        <a class="filter" id="Mountain" href="/list/category/mountain">
          <i class="fa-solid fa-mountain-sun" style="color: #63e6be"></i>
          <p>Mountain city</p>
        </a>
        <a class="filter" id="Pool" href="/list/category/pool">
          <i class="fa-solid fa-water" style="color: #74c0fc"></i>
          <p>Amazing pools</p>
        </a>
        <a class="filter" id="Camp" href="/list/category/camp">
          <i class="fa-solid fa-campground" style="color: #ffb514"></i>
          <p>Camping</p>
        </a>
        <a class="filter" id="Farm" href="/list/category/farm">
          <i class="fa-solid fa-cow"></i>
          <p>Farms</p>
        </a>
        <a class="filter" id="Arctic" href="/list/category/arctic">
          <i class="fa-solid fa-snowflake" style="color: #5f97f7"></i>
          <p>Arctic</p>
        </a>
        <a class="filter" id="Nature" href="/list/category/nature">
          <i class="fa-solid fa-tree" style="color: #2fdf0c"></i>
          <p>Nature</p>
        </a>
      </div>
      <div class="btn btn-outline-primary mb-4">
        <div class="form-check form-switch form-check-reverse">
          <input
            class="form-check-input"
            type="checkbox"
            id="switchCheckReverse"
          />
          <label class="form-check-label" for="switchCheckReverse"
            >Display fare after tax</label
          >
        </div>
      </div>
    </div>
  </div>

  <div class="list-box">
    <% for(list of lists){%>
    <a href="/list/<%=list._id%>" class="card-box text-decoration-none">
      <div class="card m-3 border-0" style="width: 22rem">
        <div class="img">
          <img
            src="<%=list.image.url%>"
            class="card-img-top"
            alt="..."
            style="height: 18rem"
          />
        </div>
        <div class="card-body">
          <p class="card-text"></p>
          <p><b><%=list.title%></b></p>
          <p>
            &#8377; <%=list.price.toLocaleString("en-IN")%>/night
            <span class="tax-info">
              <i>+ 18% GST</i>
            </span>
          </p>
        </div>
      </div>
    </a>
    <%} %>
  </div>
</body>
