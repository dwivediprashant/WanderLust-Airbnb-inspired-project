<%layout("/layouts/boilerplate.ejs")%>
<body>
  <div class="form">
    <div>
      <h2>
        Register to <span style="color: #fe424d">wander</span
        ><span style="color: black">Lust</span>
      </h2>
      <form
        method="post"
        action="/register"
        class="needs-validation"
        novalidate
      >
        <div>
          <label for="username" class="form-label">Username</label>
          <input
            name="username"
            id="username"
            type="text"
            class="form-control"
            placeholder="Enter username"
            required
          />
        </div>
        <div>
          <label for="password" class="form-label">Password</label>
          <input
            name="password"
            id="password"
            type="password"
            class="form-control"
            placeholder="Enter password"
            required
          />
        </div>
        <div class="mt-3">
          <button class="btn btn-success">Register</button>
          <a href="/login" class="btn btn-link text-decoration-none"
            >I have an account. Go to login</a
          >
        </div>
      </form>
    </div>
  </div>
</body>
